{
  "name": "purge-cache",
  "version": "2.0.0",
  "description": "",
  "type": "module",
  "main": "dist/esm/index.mjs",
  "scripts": {
    "build:ncc": "npm run type-check && ncc build -o dist/ src/index.ts",
    "build:swc": "npm run type-check && swc src/index.ts -d dist --strip-leading-paths --out-file-extension mjs",
    "build:mjs": "swc src -d dist/esm --config-file .swcrc.mjs.json --strip-leading-paths --out-file-extension mjs",
    "build:cjs": "swc src -d dist/cjs --config-file .swcrc.cjs.json --strip-leading-paths --out-file-extension cjs",
    "build": "npm run type-check && npm run build:mjs && npm run build:cjs",
    "type-check": "tsc --noEmit",
    "test": "vitest run --pool=threads",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage --reporter=html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beshkenadze/purge-cache.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/beshkenadze/purge-cache/issues"
  },
  "homepage": "https://github.com/beshkenadze/purge-cache#readme",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.4.1-nightly.20240914",
    "@swc/core": "^1.7.28",
    "@types/node": "^22.7.0",
    "@vercel/ncc": "^0.38.2",
    "@vitest/coverage-v8": "^2.1.1",
    "@vitest/ui": "^2.1.1",
    "picomatch": "^4.0.2",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1"
  },
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  }
}